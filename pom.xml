	<pluginRepositories>
		<pluginRepository>
			<id>onejar-maven-plugin.googlecode.com</id>
			<url>http://onejar-maven-plugin.googlecode.com/svn/mavenrepo</url>
		</pluginRepository>
	</pluginRepositories>
-->

	<properties>
		<!--Source code file encoding-->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

</project>
