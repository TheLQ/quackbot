<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration> 
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://YOUR_HOST:3306/YOUR_DB</property>
		<property name="hibernate.connection.username">YOUR_USERNAME</property>
		<property name="hibernate.connection.password">YOUR_PASSWORD</property>
		
		<property name="show_sql">true</property>
		
		<property name="connection.autocommit">true</property> 
		
		<mapping class="org.quackbot.data.hibernate.AdminStoreHb"/>
		<mapping class="org.quackbot.data.hibernate.ChannelStoreHb"/>
		<mapping class="org.quackbot.data.hibernate.ServerStoreHb"/>
	</session-factory>
</hibernate-configuration>
